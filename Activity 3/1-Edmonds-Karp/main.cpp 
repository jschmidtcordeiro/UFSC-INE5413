#include <iostream>
#include <fstream>
#include <sstream>
#include "EdmondsKarp.h"

int main(int argc, char *argv[]) {
    if (argc != 2) {
        std::cerr << "Uso: " << argv[0] << " <arquivo-de-input>\n";
        return 1;
    }

    std::string filename(argv[1]);
    std::ifstream file(filename);

    if (!file.is_open()) {
        std::cerr << "Não foi possível abrir o arquivo " << filename << std::endl;
        return 1;
    }

    int V, u, v, capacity;
    std::string line;
    std::string label;
    
    getline(file, line);
    std::stringstream ss(line);
    ss >> label >> V;

    EdmondsKarp ek(V);

    while (getline(file, line)) {
        std::stringstream ss(line);
        ss >> u >> v >> capacity;
        ek.addEdge(u - 1, v - 1, capacity);
    }

    int source = 0;
    int sink = V - 1;

    int maxFlow = ek.maxFlow(source, sink);
    std::cout << "O valor do fluxo máximo é: " << maxFlow << std::endl;

    file.close();

    return 0;
}
